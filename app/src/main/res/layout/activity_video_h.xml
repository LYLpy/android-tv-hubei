<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="example.getlearn.tv.view.activity.video.vlc.VideoHActivity">
<SurfaceView
    android:id="@+id/coship_video_view_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<RelativeLayout
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:background="@color/color_22"
    android:visibility="gone"
    android:id="@+id/activity_video_h_rel"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/player_ui_play_toggle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sw_25dp"
        android:layout_width="@dimen/sw_35dp"
        android:layout_height="@dimen/sw_35dp"
        android:src="@drawable/exo_controls_pause" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/sw_10dp"
        android:layout_marginLeft="@dimen/sw_60dp"
        android:id="@+id/activity_video_text_time"
        android:text="00:00"
        android:textSize="@dimen/sw_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <example.getlearn.tv.util.SeekBarUtils
        android:padding="@dimen/sw_5dp"
        android:focusable="false"
        android:layout_toLeftOf="@+id/activity_video_text_time_max"
        android:layout_toRightOf="@+id/activity_video_text_time"
        android:id="@+id/activity_video_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sw_10dp"
        android:layout_marginRight="@dimen/sw_30dp"
        android:layout_alignParentRight="true"
        android:id="@+id/activity_video_text_time_max"
        android:text="00:00"
        android:textSize="@dimen/sw_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

<ImageView
    android:layout_centerInParent="true"
    android:id="@+id/activity_video_h_gif_lod"
    android:src="@drawable/bofang"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</RelativeLayout>
