<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/activity_primary_school_class_layout"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/sw_30dp"
    android:paddingLeft="@dimen/sw_30dp"
    android:paddingRight="@dimen/sw_30dp"
    android:paddingBottom="@dimen/sw_50dp"
    tools:context="example.getlearn.tv.view.activity.PrimarySchoolClassActivity">
    <!--android:background="@drawable/ac_bg_01"-->

    <LinearLayout
        android:gravity="center"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <example.getlearn.tv.util.TvRecyclerView
            android:id="@+id/activity_primary_school_class_rec_list_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </example.getlearn.tv.util.TvRecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sw_20dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sw_20dp"
                android:layout_marginRight="@dimen/sw_20dp"
                android:background="@drawable/bg_activity_primary_school_class"
                android:padding="@dimen/sw_10dp">

                <example.getlearn.tv.util.TvRecyclerView
                    android:id="@+id/activity_primary_school_class_rec_list_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"></example.getlearn.tv.util.TvRecyclerView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipChildren="false"
            android:orientation="vertical"
            android:padding="@dimen/sw_10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_primary_school_class_rec_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
