<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--top-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_50dp"
        android:background="@drawable/video_panel_bg">

        <ImageView
            android:id="@+id/player_ui_back"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/bag_001"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="@dimen/sw_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sw_18dp"
            tools:text="视频标题" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="@dimen/sw_12dp"
            android:paddingRight="@dimen/sw_12dp"
            android:text="高清"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/player_ui_speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="@dimen/sw_12dp"
            android:paddingRight="@dimen/sw_12dp"
            android:text="速度"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/player_ui_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="@dimen/sw_12dp"
            android:paddingRight="@dimen/sw_12dp"
            android:text="弹幕"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <!--bottom-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/sw_20dp"
        android:paddingBottom="@dimen/sw_10dp"
        android:background="@drawable/video_panel_bg_bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_ui_play_toggle"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/sw_10dp"
            android:src="@drawable/exo_controls_play" />

        <TextView
            android:id="@+id/player_ui_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/sw_8dp"
            android:paddingRight="@dimen/sw_8dp"
            android:text="00:00"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/player_ui_seekbar"
            android:layout_width="@dimen/sw_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_marginRight="@dimen/sw_50dp"
            android:id="@+id/player_ui_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/sw_8dp"
            android:paddingRight="@dimen/sw_12dp"
            android:text="00:00"
            android:textColor="@android:color/white" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/player_ui_play_fullscreen"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/sw_10dp"
            android:src="@drawable/ic_zoom_stretch" />

    </LinearLayout>

</RelativeLayout>